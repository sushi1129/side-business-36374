<%= render "shared/second_header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

  <div class="main">
    <div class="inner">
      <div class="form__wrapper">
        <h2 class="page-heading">ユーザー新規登録</h2>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_nickname" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name, id:"user_last_name" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, id:"user_first_name" %>
        </div>

        <div class="field">
          <%= f.label :last_name_kana, "セイ" %><br />
          <%= f.text_field :last_name_kana, id:"user_last_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :first_name_kana, "メイ" %><br />
          <%= f.text_field :first_name_kana, id:"user_first_name_kana" %>
        </div>

        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
        </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

        <div class="weight-bold-text">地域</div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"user_prefecture"}) %>

        <div class="field">
          <%= f.label :phone_namber, "電話番号" %><br />
          <%= f.text_field :phone_namber, id:"user_phone_namber" %>
        </div>

        <div class="weight-bold-text">機種</div>
        <%= f.collection_select(:os_type_id, OsType.all, :id, :name, {}, {class:"select-box", id:"user_os_type"}) %>

        <div class="field">
          <%= f.label :use_app1, "使用しているアプリ①" %><br />
          <%= f.text_field :use_app1, id:"user_use_app1" %>
        </div>

        <div class="field">
          <%= f.label :use_app2, "使用しているアプリ②" %><br />
          <%= f.text_field :use_app2, id:"user_use_app2" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
        
      </div>
    </div>
  </div>

<% end %>

<%= render "shared/footer" %>